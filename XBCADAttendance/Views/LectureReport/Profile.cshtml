@{
    <div class="profile-container">
        <div class="profile-header">
            <h1>name</h1>
        </div>
        <div class="profile-info">
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="profile-pic">
            <div class="profile-details">
                
                <p><strong>Lecturer ID:</strong> @Model.EmployeeId</p>
                <p><strong>Name:</strong> @Model.Name</p>

                <ul>
                    @foreach (var subject in Model.Subjects)
                    {
                        <li>@subject</li>
                    }
                </ul>
            </div>
        </div>
        <div class="profile-actions">
            <a href="/Lecturer/Logout" class="btn btn-logout">Logout</a>
        </div>
    </div>
}
