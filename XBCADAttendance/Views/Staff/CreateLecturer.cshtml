@model XBCADAttendance.Models.ViewModels.AddStaffViewModel
@{
    ViewBag.Title = "Add Lecturer";
}


<div class="custom-container">
    @await Html.PartialAsync("_DashSidebarPartial")
    <div class="custom-content">
        <form asp-action="CreateLecturer" method="post">
            Module Code: <br /><input type="text" asp-for=@Model class="form-text" /><br />
            Date: <br /><input type="date" asp-for=@Model class="form-text" /><br />
     
            <button type="submit">Add</button>
        </form>

        <!-- Display the message -->
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }
    </div>
</div>






