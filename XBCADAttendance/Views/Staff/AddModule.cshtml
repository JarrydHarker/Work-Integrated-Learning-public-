@model TblModule

@{
    Layout = "_LecturerLayout";
}


<div class="head-title">
    <div class="left">
        <h1>Add Module</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">Add Module</a></li>
        </ul>
    </div>
</div>

<div class="table-data">
    <div class="order">
        <form asp-action="AddModule" asp-controller="Staff" class="module-form">
            <div class="form-group">
                <label for="moduleName">Module Name:</label>
                <input asp-for="@Model.ModuleName" placeholder="E.g. Programming" class="form-input" id="moduleName" />
            </div>
            <div class="form-group">
                <label for="moduleCode">Module Code:</label>
                <input asp-for="@Model.ModuleCode" placeholder="E.g. PROG7312" class="form-input" id="moduleCode" />
            </div>
            <button type="submit" class="submit-btn">Submit</button>
        </form>
        
        <!-- Display the message -->
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-info">@ViewBag.Message</div>
           
        }
</div>
</div>
<style>
    

    /* Form group styles */
    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
    }

        .form-group label {
            font-size: 1.1em;
            margin-bottom: 5px;
            font-weight: bold;
        }

    .form-input {
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 1em;
        width: 100%;
        transition: border-color 0.3s ease;
    }

        .form-input:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

</style>
