@using Highsoft.Web.Mvc.Charts
@model LectureReportViewModel
@{
    Layout = "_LecturerLayout";
}
<script src="https://code.highcharts.com/highcharts.js"></script>

<div class="head-title">
    <div class="left">
        <h1>Overview</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">Overview</a></li>
        </ul>

    </div>
</div>


<ul class="box-info">
    <li>
        <i class='bx bxs-calendar'></i>
        <span class="text">
            <h3>@Model.GetNextLecture()</h3>
            <p>Until Next lecture</p>
        </span>
    </li>
    <li>
        <i class='bx bxs-group'></i>
        <span class="text">
            <h3>@Model.lstStudents.Count</h3>
            <p>Attendees</p>
        </span>
    </li>
    <li>
        <i class='bx bx-category'></i>
        <span class="text">
            <h3>@Model.lstModules.Count</h3>
            <p>Modules</p>
        </span>
    </li>
</ul>
<div class="table-data">
    <div class="todo">
        <div class="head">
            <h3>Modules</h3>
            <a asp-action="create"><i class='bx bx-plus'></i></a>
        </div>
        <ul class="todo-list">
            @foreach (var module in Model.lstModules)
            {
                <li class="completed">
                    <p>@module</p>
                    
                </li>
            }
        </ul>
    </div>
    <div class="order">
        <br />
        <h3 style="color: var(--dark); z-index: 999; text-align: center;">Attendance by Lecture</h3>
        <div id="BarChart"></div>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Highcharts.chart("BarChart", {
                    chart: {
                        type: "column",
                        backgroundColor: "var(--light)"
                    },
                    title: { text: "" },
                    xAxis: {
                        categories: @Html.Raw(Json.Serialize(Model.chart.attendanceValues.Select(dp => dp.Name)))
                                                    },
                    yAxis: {
                        title: { text: "Lectures" }
                    },
                    series: [{
                        name: "Attendance",
                        data: @Html.Raw(Json.Serialize(Model.chart.attendanceValues.Select(dp => dp.Y))),
                        color: "#0056b3"
                    }]
                });
            });
        </script>
    </div>
    </div>
