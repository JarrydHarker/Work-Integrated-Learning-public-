@model LectureReportViewModel
@{
    ViewData["Title"] = "Student Attendance";
    Layout = "_LecturerLayout";
}
<div class="head-title">
    <div class="left">
        <h1>Student Report</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">Student Report</a></li>
        </ul>
    </div>
</div>

<div class="table-data">
    <div class="order">
        <table>
            <thead>
                <tr>
                    <th>Student No</th>
                    <th>Lecture Date</th>
                    <th>Module</th>
                    <th>Time</th>
                    <th>Classroom</th>
                    <th>Attendance</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.lstLectures)
                {
                    <tr>
                        <td>@item.LectureId</td>
                        <td>@item.Date</td>
                        <td>@item.ModuleCode</td>
                        <td>@item.Start - @item.Finish</td>
                        <td>@item.ClassroomCode</td>
                        <td>@Model.GetTotalStudents(item)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

