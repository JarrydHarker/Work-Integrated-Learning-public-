
@* @model LectureReportViewModel *@
<section id="sidebar">
    <a href="#" class="brand">
        <i class='bx bx-book-bookmark'></i>
        <span class="text">Lecturer Hub</span>
    </a>
    <ul class="side-menu top">
        <li class="active">
            <a asp-controller="Staff" asp-action="Index">
                <i class='bx bxs-dashboard'></i>
                <span class="text">Dashboard</span>
            </a>
        </li>
        <li>
            <a asp-controller="Staff" asp-action="StudentReport">
                <i class='bx bxs-graduation'></i>
                <span class="text">Students Report</span>
            </a>
        </li>
        <li>
            <a asp-controller="Staff" asp-action="LectureReport">
                <i class='bx bx-book-bookmark'></i>
                <span class="text">Lecture Report</span>
            </a>
        </li>
        <li>
            <a asp-controller="Staff" asp-action="Create">
                <i class='bx bxs-user-plus'></i>
                <span class="text">Create Lecture</span>
            </a>
        </li>
        <li>
            <a asp-controller="Staff" asp-action="AddModule">
                <i class='bx bxs-book-add'></i>
                <span class="text">Add Modules</span>
            </a>
        </li>
    </ul>
    <ul class="side-menu">
        <li>
            <a asp-controller="Staff" asp-action="Profile" class="profile">
                <i class='bx bxs-user'></i>
                <span class="text">Profile</span>
            </a>
        </li>
        <li>
            <a asp-controller="Staff" asp-action="logout" class="logout">
                <i class='bx bxs-log-out-circle'></i>
                <span class="text">Logout</span>
            </a>
        </li>
    </ul>
</section>

<section id="content">
    <nav>
        <i class='bx bx-menu'></i>
        <div class="send-right">
            <div class="send-right-box">
                <input type="checkbox" id="switch-mode" hidden>
                <label for="switch-mode" class="switch-mode"></label>
                <a asp-controller="Staff" asp-action="Profile"  class="profile">
                    <div class="p-0 m-0">

                        @if (Model != null)
                        {
                            @* <h6>@Model.name</h6>
                            <h6>@Model.staffId</h6> *@
                        }
                        else
                        {
                            <h6></h6>
                        }

                    </div>
                </a>
            </div>
        </div>
    </nav>
    
