@using XBCADAttendance.Models.ViewModels
@model AddStaffViewModel
@{
    Layout = "_AdminLayout";
}
<div class="head-title">
    <div class="left">
        <h1>Add Staff</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">Add Staff</a></li>
        </ul>
    </div>
</div>

<div class="table-data">
    <div class="order">
    <form asp-action="AddStaff" asp-controller="AddUser" method="post">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" asp-for="Name" class="form-control" id="name" />
        </div>

        <div class="form-group">
            <label for="role">Role:</label>
            <select asp-for="Role" class="form-control" id="role">
                @if (Model.lstRoles != null)
                {
                    @foreach (var role in Model.lstRoles)
                    {
                        <option>@role.RoleName</option>
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label for="staffNumber">Staff Number:</label>
            <input type="text" asp-for="StaffNumber" class="form-control" id="staffNumber" />
        </div>

        <div class="form-group">
            <label for="userId">User Id:</label>
            <input type="text" asp-for="UserId" class="form-control" id="userId" />
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" asp-for="Password" class="form-control" id="password" />
        </div>

        <button type="submit" class="btn-submit">Add</button>
    </form>

    <!-- Display the message -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info">@ViewBag.Message</div>
    }
</div>
</div>
<style>
    /* Container styling */
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Form group styling */
    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 5px;
            color: #333;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
    }

        .form-control:focus {
            outline: none;
            border-color: #3C91E6;
            box-shadow: 0px 0px 5px rgba(60, 145, 230, 0.3);
        }

    /* Submit button styling */
    .btn-submit {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        color: #fff;
        background-color: #3C91E6;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #357ABD;
        }

    /* Alert styling */
    .alert {
        margin-top: 20px;
        padding: 15px;
        background-color: #e7f3fe;
        color: #31708f;
        border-radius: 4px;
        font-size: 14px;
        text-align: center;
    }

    .alert-info {
        background-color: #d9edf7;
        color: #31708f;
    }

</style>