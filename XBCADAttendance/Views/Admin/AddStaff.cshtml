@using XBCADAttendance.Models.ViewModels
@model AddStaffViewModel
@{
    Layout = "_AdminLayout";
}
<div class="head-title">
    <div class="left">
        <h1>Add Staff</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">Add Staff</a></li>
        </ul>
    </div>
</div>

<div class="table-data">
    <div class="order">
        <form asp-action="AddStaff" asp-controller="Admin" method="post" class="styled-form">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" asp-for="Name" class="form-control" id="name" />
            </div>

            <div class="form-group">
                <label for="role">Role:</label>
                <select asp-for="@Model.RoleID" asp-items="@Model.GetRoles()" class="form-control" id="role">
                    <option value="">Select Role</option>
                </select>
            </div>

            <div class="form-group">
                <label for="staffNumber">Staff Number:</label>
                <input type="text" asp-for="StaffNumber" class="form-control" id="staffNumber" />
            </div>

            <div class="form-group">
                <label for="userId">User Id:</label>
                <input type="text" asp-for="UserId" class="form-control" id="userId" />
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" asp-for="Password" class="form-control" id="password" />
            </div>

            <button type="submit" class="btn-submit">Add</button>
        </form>

        <!-- Display the message -->
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

    </div>
</div>
<style>
    .styled-form {
        width: 100%; 
        border-radius: 5px;
        padding: 15px;
        margin-top: 20px;
    }

        .styled-form .form-group input, select{
            width: 100%;
        }
        .styled-form .form-group {
            margin-bottom: 10px;
        }

        .styled-form label {
            font-size: 14px;
            margin-bottom: 5px;
            display: block;
        }

        .styled-form .form-control {
            width: 100%;
            padding: 8px;
            border: 1px solid var(--blue);
            border-radius: 4px;
            background-color: #fff;
            color: var(--blue);
            font-size: 14px;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

            .styled-form .form-control:focus {
                border-color: var(--light-blue);
                box-shadow: 0 0 3px var(--light-blue);
                outline: none;
            }

        .styled-form .btn-submit {
            background-color: var(--blue);
            color: #fff;
            width: 15%;
            border: none;
            border-radius: 4px;
            padding: 10px 15px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.2s, transform 0.1s;
        }


            .styled-form .btn-submit:hover {
                background-color: var(--light-blue);
                color: var(--blue);
                transform: scale(1.02);
            }

    .alert.alert-info {
        margin-top: 10px;
        padding: 8px;
        font-size: 14px;
        background-color: var(--blue);
        color: #fff;
        border-radius: 4px;
        text-align: center;
    }


</style>