@model StudentReportViewModel

@{
    Layout = "_StudentLayout";
}

<div class="head-title">
    <div class="left">
        <h1>My Modules</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">Modules</a></li>
        </ul>
    </div>
</div>

<div class="modules-container">
    @if (Model?.lstModules?.Any() == true)
    {
        @foreach (var module in Model.lstModules)
        {
            <div class="module-card">
                <div class="module-icon">
                    <i class="bx bx-book"></i> <!-- Example icon for a module -->
                </div>
                <div class="module-details">
                    <h2 class="module-code">@module.ModuleCode</h2>
                    <p class="module-name">@module.ModuleName</p>
                </div>
            </div>
        }
    }
    else
    {
        <p class="no-data">No modules available</p>
    }
</div>

<style>
    /* Container styling */
    .modules-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
        padding: 1rem;
        max-width: 100%;
        margin: 0 auto;
    }

    /* Individual card styling */
    .module-card {
        display: flex;
        align-items: center;
        background-color: #fff;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

        .module-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    /* Icon styling */
    .module-icon {
        font-size: 2rem;
        color: #4CAF50;
        margin-right: 1rem;
    }

    /* Text styling */
    .module-details {
        display: flex;
        flex-direction: column;
    }

    .module-code {
        font-size: 1.2rem;
        font-weight: bold;
        margin: 0;
    }

    .module-name {
        font-size: 1rem;
        color: #555;
    }

    /* Empty state styling */
    .no-data {
        text-align: center;
        font-size: 1.1rem;
        color: #888;
        padding: 1rem;
    }
</style>
