@model StudentReportViewModel

@{
    Layout = "_StudentLayout";
}

<div class="head-title">
    <div class="left">
        <h1>My Modules</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">Modules</a></li>
        </ul>
    </div>
</div>

<div class="modules-container">
    @if (Model?.lstModules?.Any() == true)
    {
        @foreach (var module in Model.lstModules)
        {
            var attendancePercent = Model.CalcAttendencePerModule(module.ModuleCode);
            var attendanceColor = attendancePercent < 33 ? "#FF6347" : attendancePercent < 66 ? "#FFA500" : "#4CAF50";

            <div class="module-card">
                <div class="module-icon">
                    <i class="bx bx-book"></i>
                </div>
                <div class="module-details">
                    <h2 class="module-code">@module.ModuleCode</h2>
                    <p class="module-name">@module.ModuleName</p>
                </div>
                <div class="module-attendance">
                    <div class="attendance-circle" style="background: conic-gradient(@attendanceColor @attendancePercent%, #e0e0e0 0);">
                        <span>@attendancePercent.ToString("n2")%</span>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="no-data">No modules available</p>
    }
</div>

<style>
    .modules-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        max-width: 100%;
        margin: 0 auto;
    }

    .module-card {
        display: flex;
        align-items: center;
        background-color: var(--light);
        color: var(--dark);
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

        .module-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .module-icon {
        font-size: 2rem;
        color: #4CAF50;
        margin-right: 1rem;
    }

    .module-details {
        flex: 1;
    }

    .module-code {
        font-size: 1.2rem;
        font-weight: bold;
        margin: 0;
    }

    .module-name {
        font-size: 1rem;
        color: #555;
    }

    .module-attendance {
        display: flex;
        align-items: center;
    }

    .attendance-circle {
        --size: 50px;
        width: var(--size);
        height: var(--size);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: #e0e0e0;
        position: relative;
    }

        .attendance-circle span {
            position: absolute;
            font-size: 0.9rem;
            font-weight: bold;
            color: #333;
        }

    .no-data {
        text-align: center;
        font-size: 1.1rem;
        color: #888;
        padding: 1rem;
    }
</style>

