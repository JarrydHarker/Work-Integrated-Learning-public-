@{
    Layout = "_StudentLayout";
}

<div class="head-title">
    <div class="left">
        <h1>QR Code</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">QR Code</a></li>
        </ul>
    </div>
</div>

<div class="table-data">
    <div class="order">
    <img src="data:image/png;base64,@ViewBag.QRCodeImage" alt="QR Code" class="qr-code" />
        <div class="text-section">
            <p>
                Scan your unqiue QR code every time you enter a class at Varsity College to track your attendance.
            </p>
        </div>
    </div>
</div>



<style>
    .text-section p, ol, strong {
        font-size: 14px;
    }

    .text-section {
        width: 100%;
        padding-right: 20px;
        background-color: var(--light); 
    }

    .qr-code {
        max-width: 100%; /* Makes the image responsive to the container's width */
        height: auto; /* Maintains aspect ratio */
        border: 1px solid #ccc; /* Optional: Adds a border for better visibility */
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Optional: Adds a subtle shadow */
    }
</style>


