@{
    Layout = "_StudentLayout";
}
<div class="head-title">
    <div class="left">
        <h1>QR Code</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">QR Code</a></li>
        </ul>
    </div>
</div>

<div class="table-data">
    <!-- Added a specific container for the image -->
    <div class="qr-code-container">
        <img src="@ViewBag.QRCodePath" alt="Student QR Code" class="qr-code-image" />
    </div>
</div>

<div class="text-section">
    <p>
        Scan your unique QR code every time you enter a class at Varsity College to track your attendance.
    </p>
</div>
   


<style>
    .table-data {
        margin: 20px 0;
    }

    .qr-code-container {
        width: 100%; /* Ensures the container spans the full width */
        max-width: 600px; /* Optional: Restricts maximum size for the container */
    }

    .qr-code-image {
        max-width: 100%; /* Ensures the image fits within its container */
        height: auto; /* Maintains aspect ratio */
        display: block; /* Removes inline space below the image */
        margin: 0 auto; /* Centers the image */
        border: 1px solid #ccc; /* Optional: Adds a border */
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Optional: Adds a shadow */
    }

    .text-section p {
        font-size: 14px;
        color: var(--dark);
    }

    .text-section {
        width: 100%;
        padding-right: 20px;
    }
</style>


