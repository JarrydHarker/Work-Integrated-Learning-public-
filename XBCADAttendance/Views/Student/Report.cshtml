@model StudentReportViewModel

@{
    Layout = "_StudentLayout";
}
<div class="head-title">
    <div class="left">
        <h1>Student Report</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">Student Report</a></li>
        </ul>
    </div>
</div>
<div class="table-data">
<div class="order">
          <table class="styled-table">
            <thead>
                <tr>
                    <th>Module Code</th>
                    <th>Module Name</th>
                    <th>Lecture Date</th>
                    <th>Attendance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.lstLectures)
                {
                    <tr>
                        <td>@item.ModuleCode</td>
                        <td>@Model.GetModuleNameByCode(item.ModuleCode)</td>
                        <td>@item.LectureDate</td>
                        <td>@Model.GetAttendance(item)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    /* Table container */
    .table-data .order {
        overflow-x: auto;
        margin-top: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Styled table */
    .styled-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 16px;
        font-family: Arial, sans-serif;
    }

        /* Table header */
        .styled-table thead tr {
            background-color: #3C91E6;
            color: #ffffff;
            text-align: left;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
        }

        /* Table body */
        .styled-table tbody tr {
            transition: background-color 0.2s;
        }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .styled-table tbody tr:hover {
                background-color: #dfe9f3;
            }

</style>

