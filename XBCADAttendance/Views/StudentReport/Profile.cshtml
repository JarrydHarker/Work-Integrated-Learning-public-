@{
    <div class="profile-container">
        <div class="profile-header">
            <h1>@Model.FullName's Profile</h1>
        </div>
        <div class="profile-info">
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="profile-pic">
            <div class="profile-details">
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Student ID:</strong> @Model.StudentId</p>
                <p><strong>Enrolled Courses:</strong></p>
                <ul>
                    @foreach (var course in Model.Courses)
                    {
                        <li>@course</li>
                    }
                </ul>
            </div>
        </div>
        <div class="profile-actions">
            <a href="/Student/Logout" class="btn btn-logout">Logout</a>
        </div>
    </div>
}
