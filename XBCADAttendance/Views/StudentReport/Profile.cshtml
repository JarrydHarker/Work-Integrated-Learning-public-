@await Html.PartialAsync("_StudTopbarPartial")
<div class="custom-container">
    @await Html.PartialAsync("_StudSidebarPartial")
    <div class="custom-content">
        <div class="profile-container">
            <div class="profile-header">
                <h1>Ben Ten</h1>
            </div>
            <div class="profile-info">
                <img src="" alt="Profile Picture" class="profile-pic">
                <div class="profile-details">
                    <p><strong>Email:</strong> Ben@gmail.com</p>
                    <p><strong>Student Number:</strong> ST10132642</p>
                </div>
            </div>
            <div class="profile-actions">
                <a asp-action="logout" class="btn btn-logout">Logout</a>
