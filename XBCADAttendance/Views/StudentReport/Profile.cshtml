<style>

    .profile-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-header h1 {
        font-size: 24px;
        color: #333333;
        margin-bottom: 15px;
    }

    /* .profile-info {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    } */

    .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 20px;
        border: 2px solid #ddd;
    }

    .profile-details p {
        font-size: 16px;
        color: #555555;
        margin: 5px 0;
    }

    .profile-details strong {
        color: #333333;
    }

    .profile-actions {
        margin-top: 20px;
    }

    .btn-logout {
        display: inline-block;
        padding: 10px 20px;
        background-color: #d9534f;
        color: #ffffff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-logout:hover {
            background-color: #c9302c;
        }

</style>
