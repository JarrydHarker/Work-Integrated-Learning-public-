@model LoginViewModel;

<div class="contain">
    <div class="forms-container">
        <div class="signin-signup">
            <form asp-action="StudentLogin" asp-controller="Home" method="post" class="sign-in-form">
                <h2 class="title">Student login</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="identifier" placeholder="Student No" class="form-text" />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" asp-for="password" placeholder="Password" class="form-text" />
                </div>
                <input type="submit" value="Login" class="btn solid" />
                <div class="alert alert-info" style="display: none;"></div>
                <p class="social-text"></p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </form>
            <form asp-action="StaffLogin" asp-controller="Home" method="post" class="sign-up-form">
                <h2 class="title">Staff Login</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" asp-for="identifier" class="form-text" placeholder="Staff No" />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" asp-for="password" class="form-text" placeholder="Password" />
                </div>
                <input type="submit" class="btn" value="Login" />
                <div class="alert alert-info" style="display: none;"></div>
                <p class="social-text"></p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-linkedin-in"></i> 
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>Are you staff?</h3>
                <p>
                    Log in to manage your tasks and student information.
                </p>
                <button class="btn transparent" id="sign-up-btn">
                    Staff Login
                </button>
            </div>
            <img src="img/log.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>Or are you a Student?</h3>
                <p>
                    Access your Student dashboard and gain acces to course materials.
                </p>
                <button class="btn transparent" id="sign-in-btn">
                    Student Login
                </button>
            </div>
            <img src="img/register.svg" class="image" alt="" />
        </div>
    </div>
</div>
